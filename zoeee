  <script>
    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");

    function moveNo() {
      const x = Math.random() * 250 - 100; // rango horizontal
      const y = Math.random() * 150 - 50;  // rango vertical
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    }

    // Detectar toque en m√≥vil
    document.addEventListener("touchstart", (e) => {
      const rect = noBtn.getBoundingClientRect();
      const touch = e.touches[0];
      const distance = Math.hypot(
        touch.clientX - (rect.left + rect.width / 2),
        touch.clientY - (rect.top + rect.height / 2)
      );
      if (distance < 120) moveNo();
    });

    // Detectar acercamiento del mouse en escritorio
    document.addEventListener("mousemove", (e) => {
      const rect = noBtn.getBoundingClientRect();
      const distance = Math.hypot(
        e.clientX - (rect.left + rect.width / 2),
        e.clientY - (rect.top + rect.height / 2)
      );
      if (distance < 120) moveNo();
    });

    // Acci√≥n al aceptar
    function accepted() {
      if (navigator.vibrate) navigator.vibrate(200);
      document.body.innerHTML = `
        <div style="
          height:100vh;
          display:flex;
          justify-content:center;
          align-items:center;
          background:#ffccd5;
          font-family:Arial;
          text-align:center;
          padding:20px;
        ">
          <h1>
            üíò I knew it üíò<br><br>
            Happy Valentine‚Äôs Day Zo√© üåª<br><br>
            I miss you ü¶Ü‚ù§Ô∏è
          </h1>
        </div>
      `;
    }

    yesBtn.addEventListener("click", accepted);
    yesBtn.addEventListener("touchstart", accepted);
  </script>

</body>
